{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    //"rootDir": "./src",
    "outDir": "./build",
    "rootDirs": ["./src", "./middleware"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "controllers/*": ["controllers/*"],
      "routes/*": ["routes/*"],
      "services/*": ["services/*"],
      "types/*": ["types/*"],
      "views/*": ["views/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
